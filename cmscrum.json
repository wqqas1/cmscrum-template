{
  "name": "ios - a Business Starter Theme",
  "slug": "ios",
  "namespace": "ioScrum",
  "repo_url": "https://wqqas@bitbucket.org/wqqas/cmscrum-template.git",
  "website": "https://ioscrum",
  "documentation": "https://cms.ioscrum.com/docs",
  "version": "0.1",
  "description": "A basic cmscrum theme with a self-optimizing landing page, blog, and help desk. Named after the magical artifact from Final Fantasy.",
  "image": "https://ioscrum.com/images/logo.png",
  "dependencies": {
    "modules": {},
    "packages": {}
  },
  "config": {
    "roles": {
      "locked" : [
        "admin"
      ]
    },
    "permissions": {
      "locked": [
        "view backend",
        "edit roles"
      ]
    }
  },
  "tables": {
    "posts": {
      "id": {
        "type": "integer"
      },
      "author_id": {
        "type": "integer",
        "nullable": true,
        "auto-increment": true
      },
      "category_id": {
        "type": "integer",
        "nullable": true
      },
      "title": {
        "type": "text"
      },
      "slug": {
        "type": "text",
        "nullable": true,
        "unique": true
      },
      "created_at": {
        "type": "timestamp",
        "nullable": true
      },
      "deleted_at": {
        "type": "timestamp",
        "nullable": true
      },
      "published_at": {
        "type": "timestamp",
        "nullable": true
      },
      "json": {
        "type": "json",
        "nullable": true
      },
      "post_type": {
        "type": "text"
      },
      "status": {
        "type": "enum",
        "options": ["PUBLISHED", "PENDING", "DRAFT"],
        "default": "DRAFT"
      }
    }
  },
  "content_schema_paths": ["templates/*"],
  "content_schema_filenames": ["schema.json"],
  "content_types": {
    "active": {
      "post": {
        "slug": "post",
        "enabled": true
      },
      "faq": {
        "slug": "faq",
        "enabled": true
      },
      "tag": {
        "slug": "tag",
        "enabled": true
      }
    },
    "deprecated": {},
    "inactive": {}
  },
  "roles": {
    "admin": {
      "name": "admin",
      "display_name": "Administrator",
      "permissions": {
        "browse_users": true,
        "read_users": true,
        "edit_users": true,
        "add_users": true,
        "delete_users": true,
        "browse_settings": true,
        "read_settings": true,
        "edit_settings": true,
        "add_settings": true,
        "delete_settings": true
      }
    },
    "guest": {
      "name": "guest",
      "display_name": "Guest (Unauthenticated User)",
      "queries": {
        "posts": {
          "where": [
            [
              "post.status",
              "==",
              "string:PUBLISHED"
            ]
          ]
        }
      }
    },
    "user": {
      "name": "user",
      "display_name": "Regular User",
      "queries": {
        "posts": {
          "where": [
            [
              "post.status",
              "==",
              "string:PUBLISHED"
            ]
          ]
        }
      }
    },
    "writer": {
      "name": "writer",
      "display_name": "Writer",
      "content_types": [
        "post"
      ],
      "permissions": {
        "browse_posts": true,
        "read_posts": true,
        "edit_posts": true,
        "delete_posts": true
      },
      "queries": {
        "posts": {
          "where": [
            [
              "post.user_id",
              "==",
              "user.id"
            ],
            [
              "post.status",
              "==",
              "string:DRAFT"
            ]
          ]
        }
      }
    },
    "editor": {
      "name": "editor",
      "display_name": "Editor",
      "content_types": [
        "post"
      ],
      "permissions": {
        "browse_posts": true,
        "read_posts": true,
        "edit_posts": true,
        "delete_posts": true,
        "schedule_posts": true
      },
      "queries": {
        "posts": {
          "where": [
            [
              "post.status",
              "==",
              "string:PENDING"
            ]
          ]
        }
      }
    },
    "super_editor": {
      "name": "super_editor",
      "display_name": "Super Editor",
      "content_types": [
        "post"
      ],
      "permissions": {
        "browse_posts": true,
        "read_posts": true,
        "edit_posts": true,
        "delete_posts": true,
        "schedule_posts": true,
        "edit_post_css": true,
        "edit_post_html": true,
        "edit_post_scripts": true,
        "edit_code": true
      },
      "queries": {
        "posts": {
          "where": [
            [
              "post.status",
              "==",
              "string:*"
            ]
          ]
        }
      }
    },
    "designer": {
      "name": "designer",
      "display_name": "Web Designer",
      "content_types": [
        "post"
      ],
      "permissions": {
        "edit_post_css": true
      },
      "queries": {
        "posts": {
          "where": [
            [
              "post.status",
              "==",
              "string:PENDING"
            ]
          ]
        }
      }
    },
    "developer": {
      "name": "developer",
      "display_name": "Web Developer",
      "content_types": [
        "post"
      ],
      "permissions": {
        "edit_post_html": true,
        "edit_post_scripts": true,
        "edit_code": true
      }
    },
    "executive": {
      "name": "executive",
      "display_name": "Executive",
      "permissions": {
        "query_analytics": true
      }
    }
  },
  "settings": {
