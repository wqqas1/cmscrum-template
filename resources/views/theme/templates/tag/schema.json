{
  "title": "Tag",
  "slug": "tag",
  "version": "0.1",
  "description": "Metadata for content tags.",
  "image": null,
  "sections": {
    "Info": {
      "title": "Info",
      "slug": "info",
      "fields": {
        "full_name": {
          "type": "text",
          "description": "Full name.",
          "placeholder": "I.E. Blog Posts, or Frequently Asked Questions"
        },
        "description": {
          "type": "textarea",
          "description": "A short summary of the tagged content.",
          "placeholder": "Write one or two lines here.."
        },
        "image": {
          "type": "text",
          "description": "Url for an image (optional).",
          "placeholder": "http://www.example.com"
        }
      }
    },
    "Posts": {
      "title": "Post Settings",
      "slug": "posts",
      "fields": {
        "format": {
          "type": "select",
          "options": ["contained", "full-width"],
          "description": "How should these posts be formatted?",
          "placeholder": ""
        },
        "header": {
          "type": "code",
          "mode": "html",
          "description": "Content to display in the header of posts with this tag (optional)",
          "placeholder": "<div></div>."
        },
        "after_header": {
          "type": "code",
          "mode": "html",
          "description": "Content to display in the header of posts with this tag (optional)",
          "placeholder": "<div></div>."
        },
        "show_author_info": {
          "type": "select",
          "options": ["yes", "no"],
          "description": "Display the author's info after the post?",
          "placeholder": ""
        }
      }
    },
    "Page": {
      "title": "Page Settings",
      "slug": "page",
      "fields": {
        "format": {
          "type": "select",
          "options": ["list", "3 columns", "2 columns", "1 column", "mixed"],
          "description": "How should the index page be formatted?",
          "placeholder": ""
        },
        "image": {
          "type": "select",
          "options": ["background", "inline"],
          "description": "How should the article's image be formatted?",
          "placeholder": ""
        },
        "css": {
          "type": "code",
          "mode": "html",
          "description": "Stylesheets.",
          "placeholder": "<style> /* CSS goes here. */ </style>."
        },
        "header": {
          "type": "code",
          "mode": "html",
          "description": "Header content area (optional)",
          "placeholder": "<div></div>."
        },
        "footer": {
          "type": "code",
          "mode": "html",
          "description": "Footer content area (optional)",
          "placeholder": "<div></div>."
        },
        "scripts": {
          "type": "code",
          "mode": "html",
          "description": "Javascript.",
          "placeholder": "<script> /* Javascript goes here. */ </script>."
        }
      }
    }
  }
}